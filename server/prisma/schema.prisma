generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id    Int    @id @default(autoincrement())
    email String @unique
    role  String
}

model Product {
    id          Int    @id @default(autoincrement())
    name        String
    description String
}
